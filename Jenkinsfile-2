pipeline {
  agent any
  stages{
    stage('First-Stage'){
      steps{
        echo 'Cloning code'  
      }
    }
    stage('Second-Stage'){
      steps{
        echo 'Building code'
      }
    }
    stage('Third-Stage'){
      steps{
        echo 'Post actions'
      }
    }
  }
  post {
    always {
      echo 'Always display'
    }
    sucess {
      echo 'Only when successful'
    }
    failure {
      echo 'Only when failed'
    }
  }
}
